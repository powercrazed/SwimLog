<% if @swim.errors.any? %>
<div id="error_explanation" class="alert alert-danger alert-dismissible">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><%= pluralize(@swim.errors.count, "error") %> prohibited this swim from being saved:</strong>

    <ul>
    <% @swim.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<!-- horizontal form -->
<%= form_for @swim, :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
      <%= f.label :when, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.datetime_local_field :when, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :pool_id, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.collection_select :pool_id, Pool.order(:name), :id, :name, {prompt: true}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :duration, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :duration, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :distance, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.number_field :distance, class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-xs-12 col-sm-10 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Back", :back, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
