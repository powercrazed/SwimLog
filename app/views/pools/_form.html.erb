<% if @pool.errors.any? %>
<div id="error_explanation" class="alert alert-danger alert-dismissible">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><%= pluralize(@pool.errors.count, "error") %> prohibited this pool from being saved:</strong>

    <ul>
    <% @pool.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<!-- horizontal form -->
<%= form_for @pool, :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
      <%= f.label :name, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :length, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <div class="input-group">
        <%= f.number_field :length, class: "form-control" %>
        <span class="input-group-addon">m</span>
      </div>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-xs-12 col-sm-10 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Back", :back, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
