<div class="container">
  <% if notice %>
    <div id="notice" class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  <% end %>
</div>

<div class="container">
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Length</th>
        <th colspan="3" class="fit"></th>
      </tr>
    </thead>

    <tbody>
      <% @pools.each do |pool| %>
        <tr>
          <td><%= pool.name %></td>
          <td><%= pool.location %></td>
          <td><%= pool.length %>m</td>
          <td class="fit"><%= link_to 'Show', pool, class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Edit', edit_pool_path(pool), class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pool', new_pool_path, class: "btn btn-primary" %>
</div>
